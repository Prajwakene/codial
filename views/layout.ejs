<html>
    <head>
        <title>
            <%= title%>
        </title>
        <!-- for notification we user NOTY.js library -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <!-- //AJAX -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

        <link rel="stylesheet" href="/css/layout.css">
        <!-- for steps 7 in the index.js whenever  there is something called as link tag or script tag in my body it
             automatically put it here -->
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <%- style %>
    </head>
    
    <body>

        <%-  include('_header'); %>
        <!-- <% if (flash.success && flash.success.length > 0) { %>
            <h5>
                <%= flash.success %>
            </h5>
        <% } %> -->
<!-- body is predefine in the express-ejs-library -->

    <main id="layout-main">
        <%- body%>
    </main>
        
        <%-  include('_footer'); %>

        <%- script %>
        <!-- flash messege for success using NOTy.js -->
        <script>
            <% if(flash.success && flash.success.length > 0) { %>
                new Noty({
                    theme:'relax',
                    text: "<%= flash.success%>",
                    type: 'success',
                    layout:'topRight',
                    timeout: 1500
                }).show();
                <% } %>

                // <!-- flash messege for error using NOTy.js -->
                <% if(flash.error && flash.error.length > 0) { %>
                new Noty({
                    theme:'relax',
                    text: "<%= flash.error%>",
                    type: 'error',
                    layout:'topRight',
                    timeout: 1500
                }).show();
                <% } %>
        </script>
    </body>
</html>